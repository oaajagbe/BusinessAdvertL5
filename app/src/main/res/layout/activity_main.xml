<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/biz_badge"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/biz_badge" />

    <ImageView
        android:id="@+id/biz_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/biz_image" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/details"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingRight="8dp"
            android:src="@drawable/location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fola Kongi Close, Basorun, Ibadan"
            android:textSize="19sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingRight="8dp"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="+234-8035624801"
            android:textSize="19sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingRight="8dp"
            android:src="@drawable/clock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="0800 - 2000Hrs GMT+1"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingRight="8dp"
            android:src="@drawable/answers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="We make all sorts of men custom wears - Suits, Native etc. We are committed to serving you better."
            android:textSize="19sp" />
    </LinearLayout>

</LinearLayout>
